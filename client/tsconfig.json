{
  "compilerOptions": {
    "target": "es6", // Target ECMAScript version to ES6
    "module": "commonjs", // Use CommonJS module system
    "moduleResolution": "node", // Use Node.js style module resolution
    "allowSyntheticDefaultImports": true, // Allow importing modules with a default export from a module that doesn't explicitly define it
    "allowJs": true, // Allow importing JavaScript files in TypeScript projects
    "importHelpers": true, // Import TypeScript helper functions when needed instead of inlining them
    "jsx": "react", // Enable JSX support for React
    "alwaysStrict": true, // Enable strict mode in all TypeScript files
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing of file names (for case-insensitive file systems)
    "noFallthroughCasesInSwitch": true, // Raise an error if a switch statement case falls through without a break statement
    "noImplicitReturns": true, // Raise an error on functions that have a missing return type
    "noUnusedLocals": true, // Raise an error on unused local variables
    "noImplicitAny": false, // Don't raise an error when TypeScript can't infer the type of a variable (can be set to true for stricter type checking)
    "noImplicitThis": false, // Don't raise an error when TypeScript can't infer the type of 'this' in a function (can be set to true for stricter type checking)
    "strictNullChecks": false, // Don't enable strict null checks (can be set to true for stricter type checking)
    "outDir": "./build", // Output directory for compiled files
    "baseUrl": "./" // Base URL for module resolution (relative to tsconfig.json)
  },
  "include": ["src/**/*", "src/types.d.ts"], // *** The files TypeScript should type check ***
  "exclude": ["node_modules", "build"] // *** The files to not type check ***
}
